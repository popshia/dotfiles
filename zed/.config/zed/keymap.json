// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": "vim::PushAddSurrounds",
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward",
      "g h": "vim::FirstNonWhitespace",
      "g l": "vim::EndOfLine"
    }
  },
  {
    // normal and visual mode
    "context": "VimControl && !menu",
    "bindings": {
      // navigating
      "space e": "workspace::ToggleLeftDock",
      "ctrl-\\": "terminal_panel::ToggleFocus",
      "cmd-enter": "workspace::ToggleRightDock",
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePreviousItem",
      "space b d": "pane::CloseActiveItem",
      // editing
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp",
      // lsp
      "g k": "editor::Hover",
      "space d d": "diagnostics::Deploy",
      "space r n": "editor::Rename",
      "space c a": "editor::ToggleCodeActions",
      "space d s": "outline::Toggle",
      "space f f": "editor::Format",
      // search
      "space s f": "file_finder::Toggle",
      "space s b": "tab_switcher::Toggle",
      "space s t": "pane::DeploySearch"
    }
  },
  {
    // window swiching
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-\\": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "AssistantPanel",
    "bindings": { "cmd-enter": "workspace::ToggleRightDock" }
  }
]
